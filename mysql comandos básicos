SHOW DATABASES;   #MOSTRA TODOS OS BANCOS DISPONÍVEIS
USE CASA;   #USA O BANCO CASA
SHOW TABLES; #TABELAS DO BANCO
DESCRIBE familia; #ESTRUTURA DA TABELA FAMILIA 


#ALTERAR TABELA
ALTER TABLE familia MODIFY nomepessoa AFTER sexo; #ALTERA ORDEM DE COLUNA
ALTER TABLE familia CHANGE sexo sexooo enum('M','F'); #ALTERA NOME E TIPO DE COLUNA
ALTER TABLE familia RENAME COLUMN sexooo TO sexo; #ALTERA SOMENTE NOME DA COLUNA
ALTER TABLE familia ADD residencia text; #after id, first #ADICIONA CAMPO NA TABELA

#CRIAR / EXCLUI
CREATE DATABASE CASA2; #CRIA BANCOS
DROP DATABASE CASA2; #EXCLUI BANCO
DROP TABLE familia; #APAGA TABELA
DROP TABLE IF EXISTS familia; #APAGA TABELA EVITANDO ERRO
TRUNCATE TABLE familia; #APAGA DADOS DA TABELA
TRUNCATE TABLE IF EXISTS familia; #APAGA DADOS DA TABELA EVITANDO ERRO

CREATE TABLE FAMILIA (
idpessoa int NOT NULL AUTO_INCREMENT,
nomepessoa varchar(30),
sexo enum('M','F'),
nascimento date,
PRIMARY KEY(idpessoa)
);

#SELECT
SELECT * FROM familia;    #DADOS CONTIDOS NA TABELA FAMILIA
SELECT nomepessoa FROM familia where sexo = 'F';    #BUSCAR NA TABELA COM WHERE
SELECT nomepessoa, sexo from familia ORDER BY nomepessoa, sexo; #SELEÇÃO COM ORDENAÇÃO

#INSERÇÃO
INSERT INTO familia (nomepessoa, sexo, nascimento) VALUES('ashfaque', 'M', '1958-04-10')  
    #INSERIR NA TABELA. OS CAMPOS NAO INSERIDOS FICAM NULL. EXCETO OS AUTOINREMENT.
    #SE FOR COLOCADO NA ORDEM E EM TODOS OS CAMPOS, NÃO É NECESSARIO O NOME DOS CAMPOS.
INSERT INTO familia (a, b, c) VALUES ('1', '2', '3'),('4', '5', '6'),('7', '8', '9');  


    

